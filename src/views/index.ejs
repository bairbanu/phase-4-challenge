<!DOCTYPE html>
<html>
<head>
  <title> Vinyl </title>
  <link rel="stylesheet" type="text/css" href="/style.css">
  <script type="text/javascript" src="/script.js"></script>
  <link
    rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u"
    crossorigin="anonymous">
</head>
<body>

  <%- include( 'partials/header' ) %>

  <div class="img-size"></div>

  <div class="row">
    <div class="col-xs-4 col-sm-4 col-md-4 col-xs-offset-2 col-sm-offset-2 col-md-offset-2">
      <h2> Records </h2>

      <div class="album-list">
        <% albums.forEach( function(album) { %>
          <div>
            <h5><a href="/albums/<%= album.id %>"><%= album.title %></a></h5>
            <span>By: <%= album.artist %></span>
          </div>
        <% }) %>
      </div>
    </div>

    <div class="col-xs-6 col-sm-6 col-md-6">
      <h2> Reviews </h2>

      <div class="review-list">
        <% reviews.forEach( function(review) { %>
          <div>
            <a href="/albums/<%= review.album_id %>"><%= review.album_title %></a>
            <span><%= review.date_created %></span>
            <p>
              <%= review.content %>
            </p>
            <a href="/users/<%= review.user_id %>"><%= review.user_name %></a>
            <p> ------------------------------ </p>
          </div>
        <% }) %>
      </div>
    </div>
  </div>

</body>
</html>
